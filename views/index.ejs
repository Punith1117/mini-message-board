<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/index.css">
    <title>Index</title>
</head>
<body>
    <h1>Messages</h1>
    <section>
        <% messages.forEach(message => { %>
            <div class="message">
                <%= message.text %>
                <div class="message-details">
                    <%= message.user %>
                    <%= message.added %>
                </div>
            </div>
        <% }) %>

    </section>
    <a href="/new">Send new message</a>
</body>
</html>